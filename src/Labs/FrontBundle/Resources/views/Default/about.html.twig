{% extends '::base.html.twig' %}
{% block stylesheets %}{% endblock %}
{% block Title %}{{ 'AGR - Qui sommes nous'|upper }}{% endblock %}
{% block header %}
    <!-- Page Title
    ============================================= -->
    <section id="page-title" class="nobg">
        <div class="container clearfix">
            <h1>{{ about.title }}</h1>
            <span>{{ 'Qui est AGR ' }}</span>
            <ol class="breadcrumb">
                <li><a href="{{ path('front_home') }}">{{ 'Accuiel' }}</a></li>
                <li class="active">{{ about.title }}</li>
            </ol>
        </div>
    </section><!-- #page-title end -->
{% endblock %}

{% block body %}

    <div class="container clearfix">
        <div class="row clearfix">
            <div class="col-md-6">
                <div class="heading-block nobottomborder bottommargin-sm">
                    <h3>{{ about.title }}</h3>
                    <span> {{ about.subtitle }}</span>
                </div>
                <p>{{ about.content|raw }}</p>
            </div>
            <div class="col-md-6">
                <div class="fslider flex-thumb-grid grid-6" data-pagi="false" data-arrows="false" data-thumbs="true">
                    <div class="flexslider">
                        <div class="slider-wrap">
                            {% for service in services %}
                                <div class="slide" data-thumb="{{ service.assertPath|imagine_filter('my_thumb_small_service') }}">
                                    <img src="{{ service.assertPath|imagine_filter('my_thumb_small_full') }}" alt="Image">
                                    <div class="flex-caption slider-caption-bg slider-caption-bg-light">{{ service.title }}</div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="clear"></div>

    <div class="section nopadding common-height dark topmargin clearfix">
        <div class="col-md-4 parallax hidden-xs" style="background: url('{{ asset('img/agr/parallax.jpg') }}') center center repeat; background-size: cover;" data-stellar-background-ratio="0.9">
            <div>&nbsp;</div>
        </div>
        <div class="col-md-8">
            <div class="col-padding">

                <div class="row common-height clearfix">
                    {% for activite in services %}
                        <div class="col-sm-6 bottommargin">
                            <div class="feature-box fbox-plain">
                                <div class="fbox-icon">
                                    <a href="#">
                                        <img src="{{ activite.assertPath|imagine_filter('my_thumb_small_icon') }}" alt="{{ activite.title }}">
                                    </a>
                                </div>
                                <h3>{{ activite.title }}</h3>
                                <p>{{ activite.content }}</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

        </div>
    </div>

    <div class="line topmargin-sm"></div>
    <a href="{{ path('project') }}" class="button button-3d nobottomborder button-full center tright bottommargin-lg t300 font-primary" style="font-size: 26px;">
        <div class="container clearfix">
            Cliquez pour voir tout nos travaux réalisé et en cours  <strong>Cliquez ici</strong> <i class="icon-angle-right" style="top:3px;"></i>
        </div>
    </a>

    <!-- partenaire
    ========================== -->
    <div class="container topmargin-lg cleafix">
        <div class="divider divider-center divider-border"><i class="icon-diamond"></i></div>
        <div class="row clearfix">
            <div class="col-md-12">
                <div class="heading-block center">
                    <h2>{{ 'Nos partenaires - clients' }}</h2>
                    <span>{{ 'Nous sommes fiers de conçevoir et construire nos plans et chantier en collaboration avec des Partenaires & Clients Prestigieux' }}</span>
                </div>
                <ul class="clients-grid grid-6 nobottommargin clearfix">
                    {% for partner in partners %}
                        <li>
                            <a href="{{ partner.url }}" target="_blank">
                                <img src="{{ partner.assertPath|imagine_filter('my_thumb_partner') }}" alt="{{ partner.name }}">
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %} {% endblock %}